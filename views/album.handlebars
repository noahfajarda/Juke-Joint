<button id="go-back-home">Homepage</button>

<!-- album -->
<h1>Album:</h1>
<h1>{{albumName}}</h1>
<h1>{{albumArtist}}</h1>
<iframe
    style="border-radius: 12px"
    src="https://open.spotify.com/embed/album/{{albumId}}?utm_source=generator"
    width="100%"
    height="380"
    frameborder="0"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"
></iframe>
<h1>album ID used: {{albumId}}</h1>

<h1 style="color: red;">Add a comment about the song!:</h1>
<textarea name="comment" id="comment-box" cols="30" rows="10"></textarea>
<button id="add-comment">Add Comment</button>

<script src="/js/back-to-home.js"></script>
<script src="/js/add-comment-page.js"></script>