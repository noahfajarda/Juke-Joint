<link rel="stylesheet" href="/css/homepage.css" />
<h1 id="welcome-text">Welcome <span id="user-name">{{firstname}} {{lastname}}</span>!</h1>
{{#if loggedIn}}
    <button id="logout-btn">Log out</button>
{{/if}}

<section id="search-container">
    <div class="card">
        <div class="content">
            <h2 class="title">Search by Track</h2>
            <p class="copy">
                Discover over 80 million tracks for music with fine
                sound quality and experience.
            </p>
            <form name="new-post" id="track-post">
                <input class="search-bar" type="text" name="track_search" id="track_search" placeholder="La La Lost You" />
                <button type="submit" id="submit" class="submit">Search Track</button>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="content">
            <h2 class="title">Search by Artist</h2>
            <p class="copy">
                This list contains the most-streamed artists on the
                audio streaming platform Spotify.
            </p>
            <form name="new-post" id="artist-post">
                <input class="search-bar" type="text" name="artist_search" id="artist_search" placeholder="The Weeknd" />
                <button type="submit" id="submit" class="submit">Search Artist</button>
            </form>
            
        </div>
    </div>
    <div class="card">
        <div class="content">
            <h2 class="title">Search by Album</h2>
            <p class="copy">
                Finding albums from your favorite artists is very
                simple.
            </p>
            <form name="new-post" id="album-post">
                <input class="search-bar" type="text" name="album_search" id="album_search" placeholder="Blonde" />
                <button type="submit" id="submit" class="submit">Search Album</button>
            </form>
            
        </div>
    </div>
    
    <div class="card">
        <div class="content">
            <h2 class="title">Meet the Team</h2>
            <button class="btn member">Ranjit Saini</button>
            <button class="btn member">Noah Fajarda</button>
            <button class="btn member">Amr Moubasher</button>
            <button class="btn member">Anas Qazza</button>
        </div>
    </div>
</section>
{{>sidebar}}
<div>
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>
</div>

<button type="button" id="search-artist">
    Click here to find a new artist!
</button>

<script src="./js/homepage.js"></script>