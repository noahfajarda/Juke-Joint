<button id="go-back-home">Homepage</button>
{{! All properties that can be accessed: }}
{{! trackName, trackArtist, trackId, trackArt, title, userId, lyrics }}
{{! comments }}
{{! FOR EACH-------- id, searchedItem, body, type, postId, userId, "user.firstname", "user.lastname", "user.username", "user.password" }}

<!-- album -->
<h1>Track:</h1>
<h1 id="track-name">{{trackName}}</h1>
<h1 id="track-artist">{{trackArtist}}</h1>
<iframe
    style="border-radius: 12px"
    src="https://open.spotify.com/embed/track/{{trackId}}?utm_source=generator"
    width="100%"
    height="380"
    frameborder="0"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"
></iframe>
<h1 style="display:none">track ID used: {{trackId}}</h1>

{{! Lyrics }}
<div class="accordion accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
            <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#flush-collapseOne"
                aria-expanded="false"
                aria-controls="flush-collapseOne"
            >
                Lyrics
                {{! redirect }}
            </button>
        </h2>
        <div
            id="flush-collapseOne"
            class="accordion-collapse collapse"
            aria-labelledby="flush-headingOne"
            data-bs-parent="#accordionFlushExample"
        >
            <div class="accordion-body">
                {{#if lyrics}}
                    {{#each lyrics}}
                        {{this}}<br />
                    {{/each}}
                {{else}}
                    <p id="no-lyrics" style="color: blue;">
                        No lyrics are provided for this track
                    </p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{! comment }}
<h1 style="color: red;">Add a comment about the song!:</h1>
<div id="user-Id-container" style="display:none">
    <h2>User Id:</h2>
    <h2 id="user-Id">{{userId}}</h2>
</div>
<textarea name="comment" id="comment-box" cols="30" rows="10"></textarea>
<button id="add-track-comment">Add Comment</button>

{{#if comments}}
    <h1>Comment Section:</h1>
    <div class="container justify-content-center mt-5 border-left border-right">
        {{#each comments}}
            <div class="d-flex justify-content-center py-2">
                <div class="second py-2 px-2">
                    <span class="text1">{{body}}</span>
                    <div class="d-flex justify-content-between py-1 pt-2">
                        <div><img
                                src="https://i.imgur.com/AgAC1Is.jpg"
                                width="18"
                            /><span class="text2">{{"user.firstname"}}
                                {{"user.lastname"}}</span><span
                                class="text2"
                            >@{{"user.username"}}</span></div>
                        <div><span class="text3">Upvote?</span><span
                                class="thumbup"
                            ><i class="fa fa-thumbs-o-up"></i></span><span
                                class="text4"
                            >3</span></div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}

<link rel="stylesheet" href="/css/comment.css" />

